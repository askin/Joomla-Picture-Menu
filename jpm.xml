<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
    <name>jpm</name>
    <!-- The following elements are optional and free of formatting constraints -->
    <creationDate>2010-05-14</creationDate>
    <author>Aşkın Yollu</author>
    <authorEmail>askin@askin.ws</authorEmail>
    <authorUrl>http://blog.yollu.com</authorUrl>
    <copyright>Copyright c Aşkın Yollu</copyright>
    <license>GPLv2</license>
    <!--  The version string is recorded in the components table -->
    <version>1.00</version>
    <!-- The description is optional and defaults to the name -->
    <description>Joomla Picture Menu</description>

    <!-- Site Main File Copy Section -->
    <!-- Note the folder attribute: This attribute describes the folder
         to copy FROM in the package to install therefore files copied
         in this section are copied from /site/ in the package -->
    <files folder="site">
        <filename>controller.php</filename>
        <filename>jpm.php</filename>
        <filename>index.html</filename>
        <filename>views/index.html</filename>
        <filename>views/jpm/index.html</filename>
        <filename>views/jpm/view.html.php</filename>
        <filename>views/jpm/tmpl/default.php</filename>
        <filename>views/jpm/tmpl/index.html</filename>
    </files>

    <administration>
        <!-- Administration Menu Section -->
        <menu>Joomla Picture Menu</menu>
        <!-- Administration Main File Copy Section -->
        <files folder="admin">
            <filename>jpm.php</filename>
            <filename>index.html</filename>
        </files>
    </administration>
</install>
